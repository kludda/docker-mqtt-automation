# /etc/systemd/system/docker-mqtt-automation.service
# systemctl enable docker-mqtt-automation

[Unit]
Description=MQTT Automation Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/admin/docker-mqtt-automation
ExecStart=/usr/local/bin/docker-compose up -d
ExecStop=/usr/local/bin/docker-compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target